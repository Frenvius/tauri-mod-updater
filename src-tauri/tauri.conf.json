{
	"build": {
		"beforeDevCommand": "npm run dev",
		"beforeBuildCommand": "npm run build",
		"devPath": "http://localhost:1420",
		"distDir": "../dist",
		"withGlobalTauri": true
	},
	"package": {
		"productName": "mod-updater",
		"version": "1.0.5"
	},
	"tauri": {
		"bundle": {
			"active": true,
			"targets": "all",
			"identifier": "com.frenvius.modsUpdate",
			"icon": [
				"icons/32x32.png",
				"icons/128x128.png",
				"icons/128x128@2x.png",
				"icons/icon.icns",
				"icons/icon.ico"
			],
			"updater": {
				"active": true,
				"pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDFGOTVBNzIyMTYyRDFDRTgKUldUb0hDMFdJcWVWSDRZNmJBd1BYRlJQN1hSdktoY1RGRDBVbHhPSjlOTWx1dHVycHdMZVBseWIK"
			}
		},
		"security": {
			"csp": null
		},
		"windows": [
			{
				"decorations": false,
				"fullscreen": false,
				"resizable": false,
				"title": "mod-updater",
				"width": 420,
				"height": 228
			}
		]
	},
	"plugins": {
		"fs": {
			"scope": ["**"]
		},
		"shell": {
			"open": true,
			"scope": [
				{
					"args": true,
					"cmd": "wmic",
					"name": "wmic",
					"sidecar": false
				},
				{
					"args": true,
					"cmd": "taskkill",
					"name": "taskkill",
					"sidecar": false
				},
				{
					"args": true,
					"cmd": "robocopy",
					"name": "robocopy",
					"sidecar": false
				},
				{
					"args": true,
					"cmd": "explorer",
					"name": "explorer",
					"sidecar": false
				},
				{
					"args": true,
					"cmd": "start",
					"name": "start",
					"sidecar": false
				}
			]
		},
		"updater": {
			"endpoints": ["https://updater.frenvius.com?version={{current_version}}"]
		}
	}
}
